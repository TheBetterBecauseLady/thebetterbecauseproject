doctype html
html(lang='en-US')
	head
		title The Better Because Project
		link(rel='stylesheet', href='/sass/admin.css')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		meta(charset='utf-8')
		meta(name='description', content="The Admin Login page to the backend for The Better Because Project")
	body
		nav.profileNav
			- var postId = id;
			ul
				li 
					a(href='/admin/profile') Back to Profile
				li
					a(href='/admin/stories') Back to Stories
				li
					a(href='/admin/stories/' + postId) Back to View Only
				li
					a(href='/admin/login') Back to Login
				li
					a(href='/') Back to Client Home
				li
					a(href='/admin/logout') Logout
		main.formSection
			form(method='post', action='/admin/stories/editImage/', enctype='multipart/form-data')
				.editSection
					button(type='button')#changeImage Change The Image
				.editSection#imageDecision
					button(type='button')#upload Upload A New Image
					button(type='button')#change Change To Default Image
				.editSection#uploadNewImage
					input(type='file', id='imageUpload', name='imageUpload')
					label(for='imageUpload') Please upload a different image
				.editSection#changeToDefault
					input(type='hidden', id='imageDefault', name='imageDefault')
					label(for='imageDefault') Story Will Be Changed To Show Default Image
					input(type='hidden', id='storyid', value='true', name='storyid')
				.editSection
					input(type='submit', value='Update the Image')
	script(src='/scripts/editPost.js')
